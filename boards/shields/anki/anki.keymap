#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        undo {
            bindings = <&kp U>;
            key-positions = <1 0>;
        };

        reset_bootloader {
            bindings = <&bootloader>;
            key-positions = <0 1 2 3 4>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp SPACE  &kp NUMBER_1  &kp N  &kp NUMBER_4  &kp NUMBER_2
            >;
        };
    };
};
